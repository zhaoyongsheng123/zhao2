<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/mainBackground"
    android:id="@+id/cehuaFragment"
   >
    <FrameLayout
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:background="@color/colorPrimaryDark"
                android:layout_width="match_parent"
                android:layout_height="200dp">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/touxiangYin"
                    android:visibility="gone"
                    android:src="@mipmap/account_icon_weibo"
                    android:layout_gravity="left|top"
                    android:layout_centerVertical="true"
                    android:layout_alignRight="@+id/shoujidenglu"
                    android:layout_alignEnd="@+id/shoujidenglu" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/weibodenglu"
                    android:src="@mipmap/account_icon_weibo"
                    android:layout_gravity="left|top"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/qqdenglu"
                    android:layout_toEndOf="@+id/qqdenglu"
                    android:layout_marginLeft="51dp"
                    android:layout_marginStart="51dp" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:onClick="Login"
                    android:id="@+id/qqdenglu"
                    android:src="@mipmap/qqicon_login_profile"
                    android:layout_gravity="left|top"
                    android:layout_alignTop="@+id/weibodenglu"
                    android:layout_centerHorizontal="true" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/shoujidenglu"
                    android:src="@mipmap/cellphoneicon_login_profile"
                    android:layout_gravity="left|top"
                    android:layout_alignTop="@+id/qqdenglu"
                    android:layout_toLeftOf="@+id/qqdenglu"
                    android:layout_toStartOf="@+id/qqdenglu"
                    android:layout_marginRight="51dp"
                    android:layout_marginEnd="51dp" />

                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="30sp"
                    android:id="@+id/textName"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/touxiangYin"
                    android:layout_toEndOf="@+id/touxiangYin" />
            </RelativeLayout>
            <ListView
                android:id="@+id/listviewCeHua"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"></ListView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/nighticon_profile"
                    android:id="@+id/yejianImg"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />
                <ImageView
                    android:layout_marginLeft="20dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/shezhiImg"
                    android:src="@mipmap/tabbar_icon_set_press"
                    android:layout_alignTop="@+id/yejianImg"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设置"
                    android:textSize="25sp"
                    android:id="@+id/textView"
                    android:layout_alignBottom="@+id/shezhiImg"
                    android:layout_toRightOf="@+id/shezhiImg"
                    android:layout_toEndOf="@+id/shezhiImg" />

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="夜间"
                    android:textSize="25sp"
                    android:id="@+id/textYejian"
                    android:layout_alignBottom="@+id/yejianImg"
                    android:layout_toRightOf="@+id/yejianImg"
                    android:layout_toEndOf="@+id/yejianImg" />
            </RelativeLayout>
        </LinearLayout>

    </FrameLayout>
</LinearLayout>
